            { symbol: '·õä', name: '–°–æ—É–ª—É', meaning: '–°–æ–ª–Ω—Ü–µ', description: '–£—Å–ø–µ—Ö, –ø–æ–±–µ–¥–∞, –∂–∏–∑–Ω–µ–Ω–Ω–∞—è —Å–∏–ª–∞, —Ü–µ–ª–æ—Å—Ç–Ω–æ—Å—Ç—å' },
            { symbol: '·õè', name: '–¢–µ–π–≤–∞–∑', meaning: '–¢—é—Ä', description: '–°–ø—Ä–∞–≤–µ–¥–ª–∏–≤–æ—Å—Ç—å, –ø–æ–±–µ–¥–∞, –º—É–∂–µ—Å—Ç–≤–æ, –ª–∏–¥–µ—Ä—Å—Ç–≤–æ' },
            { symbol: '·õí', name: '–ë–µ—Ä–∫–∞–Ω–∞', meaning: '–ë–µ—Ä–µ–∑–∞', description: '–†–æ—Å—Ç, –ø–ª–æ–¥–æ—Ä–æ–¥–∏–µ, –Ω–æ–≤—ã–µ –Ω–∞—á–∏–Ω–∞–Ω–∏—è, –º–∞—Ç–µ—Ä–∏–Ω—Å—Ç–≤–æ' },
            { symbol: '·õñ', name: '–≠–≤–∞–∑', meaning: '–õ–æ—à–∞–¥—å', description: '–î–≤–∏–∂–µ–Ω–∏–µ, –ø—Ä–æ–≥—Ä–µ—Å—Å, –ø–∞—Ä—Ç–Ω–µ—Ä—Å—Ç–≤–æ, –¥–æ–≤–µ—Ä–∏–µ' },
            { symbol: '·õó', name: '–ú–∞–Ω–Ω–∞–∑', meaning: '–ß–µ–ª–æ–≤–µ–∫', description: '–ß–µ–ª–æ–≤–µ—á–Ω–æ—Å—Ç—å, —Å–æ—Ç—Ä—É–¥–Ω–∏—á–µ—Å—Ç–≤–æ, –∏–Ω—Ç–µ–ª–ª–µ–∫—Ç' },
            { symbol: '·õö', name: '–õ–∞–≥—É–∑', meaning: '–í–æ–¥–∞', description: '–ò–Ω—Ç—É–∏—Ü–∏—è, —ç–º–æ—Ü–∏–∏, —Ç–µ—á–µ–Ω–∏–µ –∂–∏–∑–Ω–∏, –æ—á–∏—â–µ–Ω–∏–µ' },
            { symbol: '·õú', name: '–ò–Ω–≥—É–∑', meaning: '–ò–Ω–≥', description: '–ü–ª–æ–¥–æ—Ä–æ–¥–∏–µ, –∑–∞–≤–µ—Ä—à–µ–Ω–∏–µ, –≤–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π —Ä–æ—Å—Ç' },
            { symbol: '·õû', name: '–î–∞–≥–∞–∑', meaning: '–î–µ–Ω—å', description: '–ü—Ä–æ—Ä—ã–≤, –ø—Ä–æ—Å–≤–µ—Ç–ª–µ–Ω–∏–µ, –Ω–æ–≤—ã–π –¥–µ–Ω—å, —Ç—Ä–∞–Ω—Å—Ñ–æ—Ä–º–∞—Ü–∏—è' },
            { symbol: '·õü', name: '–û—Ç–∏–ª–∞', meaning: '–ù–∞—Å–ª–µ–¥–∏–µ', description: '–ù–∞—Å–ª–µ–¥—Å—Ç–≤–æ, —Ç—Ä–∞–¥–∏—Ü–∏–∏, –¥–æ–º, —Å—Ç–∞–±–∏–ª—å–Ω–æ—Å—Ç—å' }
        ];

        let currentStav = [];
        let savedStavs = JSON.parse(localStorage.getItem('savedStavs')) || [];

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            renderRunes();
            setupSearch();
            setupTooltips();
        });

        function renderRunes(filteredRunes = runes) {
            const runesGrid = document.getElementById('runesGrid');
            runesGrid.innerHTML = '';

            filteredRunes.forEach(rune => {
                const runeCard = document.createElement('div');
                runeCard.className = 'rune-card';
                runeCard.innerHTML = `
                    <div class="rune-symbol">${rune.symbol}</div>
                    <div class="rune-name">${rune.name}</div>
                    <div class="rune-meaning">${rune.meaning}</div>
                `;
                
                runeCard.addEventListener('click', () => addRuneToStav(rune));
                runeCard.setAttribute('data-tooltip', rune.description);
                
                runesGrid.appendChild(runeCard);
            });
        }

        function setupSearch() {
            const searchBox = document.getElementById('searchBox');
            searchBox.addEventListener('input', function() {
                const query = this.value.toLowerCase();
                const filtered = runes.filter(rune => 
                    rune.name.toLowerCase().includes(query) ||
                    rune.meaning.toLowerCase().includes(query) ||
                    rune.description.toLowerCase().includes(query)
                );
                renderRunes(filtered);
            });
        }

        function setupTooltips() {
            const tooltip = document.getElementById('tooltip');
            
            document.addEventListener('mouseover', function(e) {
                if (e.target.hasAttribute('data-tooltip')) {
                    const tooltipText = e.target.getAttribute('data-tooltip');
                    tooltip.textContent = tooltipText;
                    tooltip.classList.add('show');
                    
                    const rect = e.target.getBoundingClientRect();
                    tooltip.style.left = rect.left + 'px';
                    tooltip.style.top = (rect.top - tooltip.offsetHeight - 10) + 'px';
                }
            });
            
            document.addEventListener('mouseout', function(e) {
                if (e.target.hasAttribute('data-tooltip')) {
                    tooltip.classList.remove('show');
                }
            });
        }

        function addRuneToStav(rune) {
            currentStav.push(rune);
            renderStav();
        }

        function renderStav() {
            const stavCanvas = document.getElementById('stavCanvas');
            
            if (currentStav.length === 0) {
                stavCanvas.className = '—Å—Ç–∞–≤-canvas empty';
                stavCanvas.innerHTML = '';
                return;
            }
            
            stavCanvas.className = '—Å—Ç–∞–≤-canvas';
            stavCanvas.innerHTML = '';
            
            currentStav.forEach((rune, index) => {
                const stavRune = document.createElement('div');
                stavRune.className = '—Å—Ç–∞–≤-rune';
                stavRune.innerHTML = `
                    <div class="rune-symbol">${rune.symbol}</div>
                    <div class="rune-name">${rune.name}</div>
                    <button class="remove-btn" onclick="removeRuneFromStav(${index})">√ó</button>
                `;
                stavCanvas.appendChild(stavRune);
            });
        }

        function removeRuneFromStav(index) {
            currentStav.splice(index, 1);
            renderStav();
        }

        function clearStav() {
            currentStav = [];
            renderStav();
            document.getElementById('stavInfo').style.display = 'none';
        }

        function analyzeStav() {
            if (currentStav.length === 0) {
                alert('–î–æ–±–∞–≤—å—Ç–µ —Ä—É–Ω—ã –≤ —Å—Ç–∞–≤ –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞');
                return;
            }
            
            const stavInfo = document.getElementById('stavInfo');
            const stavDescription = document.getElementById('stavDescription');
            
            let analysis = `<h4>–°–æ—Å—Ç–∞–≤ —Å—Ç–∞–≤–∞ (${currentStav.length} —Ä—É–Ω):</h4>`;
            analysis += '<ul>';
            
            currentStav.forEach(rune => {
                analysis += `<li><strong>${rune.symbol} ${rune.name}</strong> - ${rune.description}</li>`;
            });
            
            analysis += '</ul>';
            
            // –û–±—â–∏–π –∞–Ω–∞–ª–∏–∑
            analysis += '<h4>–û–±—â–∞—è —ç–Ω–µ—Ä–≥–µ—Ç–∏–∫–∞ —Å—Ç–∞–≤–∞:</h4>';
            analysis += '<p>' + generateStavAnalysis() + '</p>';
            
            // –†–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –ø–æ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏
            analysis += '<h4>–†–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –ø–æ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏:</h4>';
            analysis += '<p>–î–ª—è –∞–∫—Ç–∏–≤–∞—Ü–∏–∏ –¥–∞–Ω–Ω–æ–≥–æ —Å—Ç–∞–≤–∞ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –º–µ–¥–∏—Ç–∞—Ü–∏—é, –≤–∏–∑—É–∞–ª–∏–∑–∞—Ü–∏—é —Ü–µ–ª–∏ –∏ –ø—Ä–æ–∏–∑–Ω–µ—Å–µ–Ω–∏–µ –∏–º–µ–Ω —Ä—É–Ω. –õ—É—á—à–µ–µ –≤—Ä–µ–º—è –¥–ª—è —Ä–∞–±–æ—Ç—ã - ';
            analysis += getRecommendedTime() + '.</p>';
            
            stavDescription.innerHTML = analysis;
            stavInfo.style.display = 'block';
        }

        function generateStavAnalysis() {
            const themes = {
                protection: ['–ê–ª—å–≥–∏–∑', '–¢—É—Ä–∏—Å–∞–∑', '–≠–π–≤–∞–∑'],
                wealth: ['–§–µ—Ö—É', '–ô–µ—Ä–∞', '–û—Ç–∏–ª–∞'],
                love: ['–ì–µ–±–æ', '–ë–µ—Ä–∫–∞–Ω–∞', '–í—É–Ω—å–æ'],
                power: ['–£—Ä—É–∑', '–¢–µ–π–≤–∞–∑', '–°–æ—É–ª—É'],
                wisdom: ['–ê–Ω—Å—É–∑', '–ö–µ–Ω–∞–∑', '–ú–∞–Ω–Ω–∞–∑'],
                change: ['–•–∞–≥–∞–ª–∞–∑', '–î–∞–≥–∞–∑', '–†–∞–π–¥–æ']
            };
            
            let dominantThemes = [];
            
            for (let theme in themes) {
                let count = 0;
                themes[theme].forEach(runeName => {
                    if (currentStav.some(rune => rune.name === runeName)) {
                        count++;
                    }
                });
                if (count > 0) {
                    dominantThemes.push({ theme, count });
                }
            }
            
            dominantThemes.sort((a, b) => b.count - a.count);
            
            let analysis = '–î–∞–Ω–Ω—ã–π —Å—Ç–∞–≤ ';
            
            if (dominantThemes.length > 0) {
                const mainTheme = dominantThemes[0].theme;
                switch (mainTheme) {
                    case 'protection':
                        analysis += '–Ω–∞–ø—Ä–∞–≤–ª–µ–Ω –Ω–∞ –∑–∞—â–∏—Ç—É –∏ –æ–±–æ—Ä–æ–Ω—É –æ—Ç –Ω–µ–≥–∞—Ç–∏–≤–Ω—ã—Ö –≤–æ–∑–¥–µ–π—Å—Ç–≤–∏–π.';
                        break;
                    case 'wealth':
                        analysis += '—Å–ø–æ—Å–æ–±—Å—Ç–≤—É–µ—Ç –ø—Ä–∏–≤–ª–µ—á–µ–Ω–∏—é –º–∞—Ç–µ—Ä–∏–∞–ª—å–Ω–æ–≥–æ –±–ª–∞–≥–æ–ø–æ–ª—É—á–∏—è –∏ –ø—Ä–æ—Ü–≤–µ—Ç–∞–Ω–∏—è.';
                        break;
                    case 'love':
                        analysis += '—Ä–∞–±–æ—Ç–∞–µ—Ç —Å —ç–Ω–µ—Ä–≥–∏—è–º–∏ –ª—é–±–≤–∏, –≥–∞—Ä–º–æ–Ω–∏–∏ –∏ –æ—Ç–Ω–æ—à–µ–Ω–∏–π.';
                        break;
                    case 'power':
                        analysis += '—É—Å–∏–ª–∏–≤–∞–µ—Ç –ª–∏—á–Ω—É—é —Å–∏–ª—É, –ª–∏–¥–µ—Ä—Å–∫–∏–µ –∫–∞—á–µ—Å—Ç–≤–∞ –∏ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å.';
                        break;
                    case 'wisdom':
                        analysis += '—Ä–∞–∑–≤–∏–≤–∞–µ—Ç –º—É–¥—Ä–æ—Å—Ç—å, –∏–Ω—Ç—É–∏—Ü–∏—é –∏ —Å–ø–æ—Å–æ–±–Ω–æ—Å—Ç—å –∫ –æ–±—É—á–µ–Ω–∏—é.';
                        break;
                    case 'change':
                        analysis += '–∫–∞—Ç–∞–ª–∏–∑–∏—Ä—É–µ—Ç –ø–µ—Ä–µ–º–µ–Ω—ã –∏ —Ç—Ä–∞–Ω—Å—Ñ–æ—Ä–º–∞—Ü–∏—é –≤ –∂–∏–∑–Ω–∏.';
                        break;
                }
            } else {
                analysis += '–∏–º–µ–µ—Ç —Å–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω–Ω—É—é —ç–Ω–µ—Ä–≥–µ—Ç–∏–∫—É –∏ –º–æ–∂–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –¥–ª—è –æ–±—â–∏—Ö —Ü–µ–ª–µ–π.';
            }
            
            return analysis;
        }

        function getRecommendedTime() {
            const times = [
                '–≤–æ—Å—Ö–æ–¥ —Å–æ–ª–Ω—Ü–∞',
                '–ø–æ–ª–¥–µ–Ω—å',
                '–∑–∞–∫–∞—Ç',
                '–ø–æ–ª–Ω–æ—á—å',
                '—Ä–∞—Å—Ç—É—â–∞—è –ª—É–Ω–∞',
                '–ø–æ–ª–Ω–æ–ª—É–Ω–∏–µ'
            ];
            return times[Math.floor(Math.random() * times.length)];
        }

        function saveStav() {
            if (currentStav.length === 0) {
                alert('–ù–µ—á–µ–≥–æ —Å–æ—Ö—Ä–∞–Ω—è—Ç—å - –¥–æ–±–∞–≤—å—Ç–µ —Ä—É–Ω—ã –≤ —Å—Ç–∞–≤');
                return;
            }
            
            const name = prompt('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –¥–ª—è —Å—Ç–∞–≤–∞:');
            if (name) {
                const stavToSave = {
                    name: name,
                    runes: [...currentStav],
                    created: new Date().toLocaleDateString()
                };
                
                savedStavs.push(stavToSave);
                localStorage.setItem('savedStavs', JSON.stringify(savedStavs));
                alert('–°—Ç–∞–≤ —Å–æ—Ö—Ä–∞–Ω–µ–Ω!');
            }
        }

        function generateRandomStav() {
            const count = Math.floor(Math.random() * 5) + 3; // 3-7 —Ä—É–Ω
            currentStav = [];
            
            for (let i = 0; i < count; i++) {
                const randomRune = runes[Math.floor(Math.random() * runes.length)];
                currentStav.push(randomRune);
            }
            
            renderStav();
        }
